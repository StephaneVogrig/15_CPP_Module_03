NAME	?=	scavtrap

# sources ---------------------------------------------------------------------#

SRC 	?=	main.cpp \
			ClapTrap.cpp \
			ScavTrap.cpp

# objects ---------------------------------------------------------------------#

OBJ_DIR	:=	.build/
OBJ		:=	$(SRC:%.cpp=$(OBJ_DIR)%.o)

# compilation -----------------------------------------------------------------#

CC		:=	c++
CFLAGS	:=	-Wall -Wextra -Werror

#------------------------------------------------------------------------------#
# rules                                                                        #
#------------------------------------------------------------------------------#

all: $(NAME)

clean:
	@rm -rf $(OBJ_DIR)

fclean: clean
	@rm -rf $(NAME)

re: fclean all

#------------------------------------------------------------------------------#
# compilation                                                                  #
#------------------------------------------------------------------------------#

$(OBJ_DIR)%.o: %.cpp
	@mkdir -p $(dir $@)
	@$(CC) $(CFLAGS) -c $< -o $@
	@echo "compiled $<"

#------------------------------------------------------------------------------#
# linkage                                                                      #
#------------------------------------------------------------------------------#

$(NAME): $(OBJ)
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "created $(NAME)"
	
#------------------------------------------------------------------------------#
# specifications                                                               #
#------------------------------------------------------------------------------#

.PHONY: all \
		clean \
		fclean \
		re
